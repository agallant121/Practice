<h1><%= @movie.name %></h1>
<h3><%= @movie.creation %></h3>
<h3><%= @movie.genre %></h3>
<h4>Cast by Age: <% @movie.actors_by_age.each do |actor| %></h4>
            <p><%= actor.name %></p>
            <% end %>


<h4>Actors' Average Age: <%= @movie.actors_avg_age %></h4>

<h4>New Actor:</h4>
<p><%= form_tag "/movies/#{@movie.id}", method: :post do %></p>
          <%= label_tag :name %>
          <%= text_field_tag :name %>
          <%= submit_tag "Submit" %>
        <% end %>
